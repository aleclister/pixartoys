<div class="container new_toy" >
  <h1> Add a new toy </h1>
  <%= simple_form_for([@user, @toy]) do |f| %>
    <%= f.input :name, collection: @names, include_blank: false %>
    <%= f.input :movie %>
    <%= f.input :character %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :photo, as: :attachinary %>
    <%= f.button :submit, class: "btn btn-danger" %>
  <% end %>
</div>

