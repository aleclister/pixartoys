<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_url 'banner.jpg' %>);">
  <div class="banner-content">
    <h1>Welcome to Pixar Toys</h1>
    <p>Very cool stuff, useful and smart</p>
  </div>
</div>

<div class="bg-grey">
  <div class="container">
    <div class="row">
    <h1 class="text-center">Pixar movies</h1>
    <% @movies.each do |movie| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
      <% if movie.photo? %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path movie.photo.path %>);">
          <div class="card-category"><p><%= movie.rating %></p></div>
          <div class="card-description"><h2><%= movie.name %></h2></div>
          <a class="card-link" href="<%= movie_path(movie) %>" ></a>
        </div>
      <% else %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= asset_url 'cars.jpg' %>);">
          <div class="card-category"><p><%= movie.rating %></p></div>
          <div class="card-description"><h2><%= movie.name %></h2></div>
          <a class="card-link" href="<%= movie_path(movie) %>" ></a>
        </div>
      <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>

